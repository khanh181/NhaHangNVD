@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/pages/login/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/pages/login/vendor/bootstrap/css/bootstrap-reboot.min.css">
    <!--===============================================================================================-->

    <link rel="stylesheet" type="text/css" href="~/Content/pages/login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/pages/login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/pages/login/css/main.css">
    <!--===============================================================================================-->
</head>

<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Content/pages/login/images/capvisit.png" alt="IMG">
                </div>

                <form class="login100-form validate-form" method="post">
                    @Html.AntiForgeryToken()
                    <span class="login100-form-title">
                        Nhà hàng Nguyễn Văn Dực
                    </span>

                    <div class="wrap-input100 validate-input">
                        <input class="input100" name="Username" type="text" placeholder="Tên tài khoản" required>
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input">
                        <input class="input100" type="password" name="Password" placeholder="Mật khẩu" required>
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">
                            Đăng nhập
                        </button>
                    </div>

                    <div class="text-center p-t-12">
                        <span class="txt1">
                            @Html.ValidationMessage("error", "", new { @class = "text-danger" })
                        </span>
                    </div>

                    <div class="text-center p-t-136">

                    </div>
                </form>
            </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/Content/plugins/jquery/jquery.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/pages/login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/pages/login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/pages/login/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>

</body>

</html>